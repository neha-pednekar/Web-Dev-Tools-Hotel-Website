@model ProjectNehaPalace.Models.HotelViewModels.Booking;

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="" style="align-self:center">
        <h5 id="customFont">Make a Reservation</h5>
    </div>


    <form class="form-inline" id="reservation-form" method="post"
          action="@Url.Action("Reservation", "Hotel")">
        @Html.ValidationSummary()

        <div class="col-md-4 col-md-offset-1 form-group" style="margin-top: 10px;">
            <div>
                @Html.Label("CheckinDate", "Check In: ")
                @Html.TextBoxFor(m => m.CheckinDate, "",
             new { @class = "form-control", @type="date", @style = "width: 100%" })
                @Html.ValidationMessageFor(m => m.CheckinDate, "*Required", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 col-md-offset-1 form-group" style="margin-top: 10px;">
            @Html.Label("CheckoutDate", "Check Out: ")
            @Html.TextBoxFor(m => m.CheckoutDate, "",
                new { @class = "form-control", @type="date", @style = "width: 100%" })
            @Html.ValidationMessageFor(m => m.CheckoutDate, "*Required", new { @class = "text-danger" })
        </div>

        <div class="col-md-2 form-group" style="margin-top: 10px;">

        </div>

        <div class="col-md-4 col-md-offset-1 form-group" style="margin-top: 10px;">
            @Html.Label("NumberOfAdults", "Adults: ")
            @Html.TextBoxFor(m => m.NumberOfAdults, "", new
            {
                @class = "form-control",
                @type = "number",
                @style = "width: 100%",
                @min = 1,
                @max = 4
            })
            @Html.ValidationMessageFor(m => m.NumberOfAdults,
                "*Required", new { @class = "text-danger" })
        </div>

        <div class="col-md-4 col-md-offset-1 form-group" style="margin-top: 10px;">
            @Html.Label("NumberOfChildren", "Children: ")
            @Html.TextBoxFor(m => m.NumberOfChildren, "", new
            {
                @class = "form-control",
                @type = "number",
                @style = "width: 100%",
                @min = 0,
                @max = 4
            })
            @Html.ValidationMessageFor(m => m.NumberOfChildren,
             "*Required", new { @class = "text-danger" })
        </div>

        <div class="col-md-2 form-group" style="margin-top: 10px;">

        </div>

        <div class="col-md-4 col-md-offset-1 form-group" style="margin-top: 10px;">
            @Html.Label("NumberOfRooms", "Number of rooms: ")

            @Html.TextBoxFor(m => m.NumberOfRooms, "", new
            {
                @class = "form-control",
                @type = "number",
                @style = "width: 100%",
                @min = 1,
                @max = 3
            })
            @Html.ValidationMessageFor(m => m.NumberOfRooms,
             "*Required", new { @class = "text-danger" })
        </div>

        <div class="col-md-7 form-group" style="margin-top: 10px;">

        </div>
       

        <div class="col-md-12 form-group" style="margin-top: 10px; margin-bottom: 10px; text-align: center">
            <input id="" type="submit" style="letter-spacing: 2px" value="Book Now"
                   class="btn btn-default btn-sm" />
        </div>

        <div class="col-md-12 form-group" style="margin-top: 10px; margin-bottom: 10px; text-align:center">
            <a asp-area="" asp-controller="Rooms" asp-action="Index" class="btn btn-default btn-sm"
               style="letter-spacing: 2px">
                Check Availability
            </a>
        </div>

    </form>

    @* </div> *@
</div>

<br />
<br />

<div id="luxury-rooms">
    <!-- Heading box -->
    <div class="heading-box">
        <h2>Explore Serenity At <span>The Neha Palace</span></h2><!-- Title -->
        <div class="subtitle">By Team Neha Pednekar</div><!-- Subtitle -->
    </div>

    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" id="main-slider">
                <div class="item active">
                    <img src="~/images/Home/np_carousel1.jpg" alt="carouselImage1">
                </div>

                <div class="item">
                    <img src="~/images/Home/np_carousel2.jpg" alt="carouselImage2">
                </div>

                <div class="item">
                    <img src="~/images/Home/np_carousel3.jpg" alt="carouselImage3">
                </div>

            </div>

            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
    </div>
