@using ProjectNehaPalace.Models.HotelViewModels;
@model ProjectNehaPalace.Models.HotelViewModels.Booking


    <div class="internal-pages trans-header sticky booking-page">

        <!-- Internal Page Header -->
        <div class="internal-page-title about-page">
            <ol class="breadcrumb">
                <!-- Internal Page Breadcrumb -->
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="active">Customer History</li>
            </ol>
        </div>

        @if (Model != null)
        {
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="invoice-title" style="text-align:center">
                        <h2>Customer Booking Invoice</h2>
                        <h3>Booking ID # @Model.BookingID</h3>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-xs-12">
                            <address style="text-align:center">
                                <strong style="color: #C5A46D">Customer Details:</strong><br>
                                @Model.Customer.FirstName<br>
                                @Model.Customer.Person.Address.AddressLine1<br>
                                @Model.Customer.Person.Address.AddressLine2<br>
                                @Model.Customer.Person.Address.City<br>
                                @Model.Customer.Person.Address.State<br>
                                @Model.Customer.Person.Address.ZipCode<br>
                            </address>
                        </div>
                    </div>
                    <hr />

                    <div class="row">
                        <div class="col-xs-12" style="text-align:center">
                            <strong style="color: #C5A46D">Checkin Date:</strong><br>
                            @Model.CheckinDate.ToShortDateString()<br>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12"  style="text-align:center">
                            <strong style="color: #C5A46D">Checkout Date:</strong><br>
                            @Model.CheckoutDate.ToShortDateString()<br>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12" style="text-align:center">
                            <strong style="color: #C5A46D">Total Days of Stay:</strong><br>
                            @Model.NumberOfDays<br>
                </div>
                </div>

                <div class="row">
                    <div class="col-xs-12" style="text-align:center">
                        <strong style="color: #C5A46D">Number of Children:</strong><br>
                        @Model.NumberOfChildren<br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12" style="text-align:center">
                        <strong style="color: #C5A46D">Number of Adults:</strong><br>
                        @Model.NumberOfAdults<br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12" style="text-align:center">
                        <strong style="color: #C5A46D">Booking Date:</strong><br>
                        @Model.BookingDate.ToShortDateString()<br>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-xs-12" style="text-align:center">
                        <address>
                            <strong style="color: #C5A46D">Payment Method:</strong><br>
                            Visa ending **** XXXX<br>
                            @Model.Customer.EmailAddress
                        </address>
                    </div>
                </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading" style="background-color:#C5A46D">
                            <h3 class="panel-title"><strong>Order summary</strong></h3>
                        </div>
                        <div class="panel-body" style="background-color:#C5A46D">
                            <div class="table-responsive" 
                                 style="background:linear-gradient(to right, black, grey, black)">
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <td><strong>Room Type</strong></td>
                                            <td class="text-center"><strong>Price</strong></td>
                                            <td class="text-center"><strong>Number of Rooms</strong></td>
                                            <td class="text-right"><strong>Total</strong></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- foreach ($order->lineItems as $line) or some such thing here -->
                                        @foreach (var roomModel in Model.Room)
    {
                                    <tr>
                                        <td>@roomModel.RoomType</td>
                                        <td class="text-center">$@roomModel.RoomTariff</td>
                                        <td class="text-center">1</td>
                                        <td class="text-right">$@roomModel.RoomTariff</td>
                                    </tr>
}

                                        <tr>
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                            <td class="no-line text-center"><strong>Total Days of Stay</strong></td>
                                            <td class="no-line text-right">@Model.NumberOfDays</td>
                                        </tr>

                                        <tr>
                                            <td class="thick-line"></td>
                                            <td class="thick-line"></td>
                                            <td class="thick-line text-center"><strong>Subtotal</strong></td>
                                            <td class="thick-line text-right">$@Model.TotalCost</td>
                                        </tr>

                                        <tr>
                                            <td class="thick-line"></td>
                                            <td class="thick-line"></td>
                                            <td class="thick-line text-center"><strong>Tax</strong></td>
                                            <td class="thick-line text-right">$15</td>
                                        </tr>

                                        <tr>
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                            <td class="no-line text-center"><strong>Total</strong></td>
                                            <td class="no-line text-right">$@(Model.TotalCost + 15)</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>}
        </div>



